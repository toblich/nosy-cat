{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "pretty": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "lib": ["dom", "es6"]
  },
  "exclude": ["node_modules", "build", "**/__test__"],
  "include": ["src"]
}
